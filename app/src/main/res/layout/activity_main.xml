<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/txv1"
            app:layout_constraintHorizontal_bias="0.32" app:layout_constraintVertical_bias="0.598"/>
    <android.support.v4.view.ViewPager
            android:layout_width="395dp"
            android:layout_height="340dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp"
            android:id="@+id/viewPager"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn1" app:layout_constraintStart_toEndOf="@+id/txv1" android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="@+id/txv1" app:layout_constraintBottom_toBottomOf="@+id/txv1"/>

</android.support.constraint.ConstraintLayout>